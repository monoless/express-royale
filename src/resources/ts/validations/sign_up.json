{
    "username": {
        "type": "string",
        "required": true,
        "min": 4,
        "matches": "[a-z][a-z0-9_.]+"
    },
    "email": {
        "type": "string",
        "required": true,
        "email": true
    },
    "password": {
        "type": "string",
        "required": true,
        "min": 8,
        "matches": "^.*(?=^.{8,15}$)(?=.*\\d)(?=.*[a-zA-Z])(?=.*[!@#$%^&+=]).*$"
    },
    "passwordConfirm": {
        "type": "string",
        "required": true,
        "equal": "password"
    }
}