{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "$id": "sign_up.json",
    "title": "sign up",
    "description": "sign up",
    "type": "object",
    "properties": {
        "username": {
            "description": "name of the person",
            "type": "string",
            "minLength": 4,
            "pattern": "[a-z][a-z0-9_.]+",
            "flags": "i"
        },
        "email": {
            "description": "email of the person",
            "type": "string",
            "email": true
        },
        "password": {
            "description": "password of the person",
            "type": "string",
            "minLength": 8,
            "pattern": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$"
        },
        "passwordConfirm": {
            "description": "password of the person",
            "type": "string",
            "oneOf": [{
                "$data": ""
            }]
        }
    },
    "required": ["username", "email", "password", "passwordConfirm"]
}