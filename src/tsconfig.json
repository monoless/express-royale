{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "./resources/ts",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./resources/typings"]
  },
  "include": ["resources/ts/**/*", "resources/typings/index.d.ts"]
}
